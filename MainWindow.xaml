<Window x:Class="DWinOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DWinOverlay"
        mc:Ignorable="d"
        Title="Overlay" Height="100" Width="300" ShowInTaskbar="False" AllowsTransparency="True" WindowStyle="None" Background="Transparent" Loaded="TileLoaded">
    <Grid Background="#19000000">
        <TextBlock x:Name="loadingMessage" Text="Loading..." Foreground="White" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" FontSize="16"/>
        <Image Margin="0" Width="80" Height="80" HorizontalAlignment="Left" VerticalAlignment="Center"></Image>
    </Grid>
</Window>
