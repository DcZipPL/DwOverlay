<Page
    x:Class="TielsUILib.AppearancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TielsUILib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="15,15,0,0">
            <ToggleSwitch Header="Autostart" Margin="0,0,0,5"/>
            <ToggleSwitch Header="Hide this window after application startup" Margin="0,0,0,5"/>
            <ToggleSwitch Header="Experimental Features" Margin="0,0,0,5" IsEnabled="False"/>
            <ToggleSwitch Header="Special Effects (Disabling this increase performance)" Margin="0,0,0,5"/>
        </StackPanel>
    </Grid>
</Page>
