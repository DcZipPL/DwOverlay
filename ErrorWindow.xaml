<Window x:Class="DWinOverlay.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DWinOverlay"
        mc:Ignorable="d"
        Title="ErrorWindow" Height="250" Width="600" Loaded="Window_Loaded" Topmost="True" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None" Background="#7F000000" Foreground="White">
    <Grid>
        <TextBlock x:Name="ErrorText" Foreground="White" Margin="10,35,10,10" FontSize="14"/>
        <TextBlock x:Name="ErrorMessage" Foreground="White" Margin="10,5,40,0" VerticalAlignment="Top" FontSize="16"/>
    </Grid>
</Window>
