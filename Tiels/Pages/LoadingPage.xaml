<Page x:Class="Tiels.Pages.LoadingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:gif="http://wpfanimatedgif.codeplex.com"
      xmlns:local="clr-namespace:Tiels.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoadingPage">
    <Grid>
        <Image x:Name="loadingGif" gif:ImageBehavior.AnimatedSource="/Assets/LoadingAnimation.gif" Width="64" Height="64"></Image>
        <TextBlock x:Name="PText" Text="Loading / Generating Icons..." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Margin="0,115,0,0"/>
    </Grid>
</Page>
